<resources>

    <!-- Tema Principal -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Tema SecundÃ¡rio -->
    <style name="AppTheme.Blue" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorSecondary</item>
        <item name="colorPrimaryDark">@color/colorSecondaryDark</item>
        <item name="colorAccent">@color/colorSecondaryDark</item>
    </style>
    
    <!-- Tela Cheia -->
    <style name="AppTheme.FullScreen" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- Splash Screen -->
    <style name="AppTheme.SplashScreen" parent="AppTheme.FullScreen">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <!-- Status Bar Transparente -->
    <style name="AppTheme.BgStatus" parent="AppTheme">
        <item name="android:statusBarColor">@color/colorAppBackground</item>
    </style>

</resources>
